{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2015", "ES2017", "ES2018"],
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts", "build", "example"]
}
